{ "name": "__MSG_COLOR_ENHANCER_APPNAME__",
  "version": "1.13.3",
  "description": "__MSG_COLOR_ENHANCER_APPDESC__",
  "manifest_version": 2,
  "permissions": [
    "<all_urls>",
    "tabs"
  ],
  "background": {
    "scripts": [
      "src/common.js",
      "src/storage.js",
      "src/background.js"
    ]
  },
  "browser_action": {
    "default_title": "__MSG_COLOR_ENHANCER_APPNAME__",
    "default_popup": "src/popup.html"
  },
  "content_scripts": [
    {
      "run_at": "document_start",
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "src/common.js",
        "src/cvd.js"
      ]
    }
  ]
}
